<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="35.0dip"
    	android:orientation="horizontal"
    	android:layout_weight="1"
    	android:gravity="center_vertical"
        >
        
        <!-- 最新资讯按钮 -->
       <Button 
           style="@style/frame_button"
           android:text="@string/frame_title_news_lastest"
           /> 
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:src="@drawable/frame_button_cutline"
           />
       
        <!-- 最新博客按钮 -->
       <Button 
           style="@style/frame_button"
           android:text="@string/frame_title_news_lastest_blog"
           /> 
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:src="@drawable/frame_button_cutline"
           />
       
        <!-- 推荐阅读按钮 -->
       <Button 
           style="@style/frame_button"
           android:text="@string/frame_title_news_recommend"
           /> 
       <ImageView 
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:src="@drawable/frame_button_cutline"
           />
    </LinearLayout>

</LinearLayout>
